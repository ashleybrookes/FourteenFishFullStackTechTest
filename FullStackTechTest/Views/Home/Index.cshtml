@model FullStackTechTest.Models.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div>
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
            <div class="form-group">
                <div class="col-md-6">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <input type="submit" value="Import" />
                </div>
            </div>
        </form>

    </div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in Model.PeopleList)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", new { id = person.Id})">
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
            </tr>
        }
        </tbody>
    </table>
    
</div>